    <script>
        let currentSlideIndex = 0;
        const slides = document.querySelectorAll('.slide');
        const totalSlides = slides.length;
        
        document.getElementById('totalSlides').textContent = totalSlides;
        
        function showSlide(index) {
            slides.forEach((slide, i) => {
                slide.classList.remove('active', 'prev');
                if (i === index) {
                    slide.classList.add('active');
                } else if (i < index) {
                    slide.classList.add('prev');
                }
            });
            
            document.getElementById('currentSlide').textContent = index + 1;
        }
        
        function nextSlide() {
            if (currentSlideIndex < totalSlides - 1) {
                currentSlideIndex++;
                showSlide(currentSlideIndex);
            }
        }
        
        function previousSlide() {
            if (currentSlideIndex > 0) {
                currentSlideIndex--;
                showSlide(currentSlideIndex);
            }
        }
        
        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowRight' || e.key === ' ') {
                nextSlide();
            } else if (e.key === 'ArrowLeft') {
                previousSlide();
            }
        });
        
        // Keyword hover effects
        document.querySelectorAll('.keyword').forEach(keyword => {
            keyword.addEventListener('mouseenter', (e) => {
                const definition = e.target.getAttribute('data-definition');
                if (definition) {
                    const popup = document.getElementById('popup');
                    popup.textContent = definition;
                    popup.style.left = e.pageX + 'px';
                    popup.style.top = (e.pageY - 50) + 'px';
                    popup.classList.add('show');
                }
            });
            
            keyword.addEventListener('mouseleave', () => {
                document.getElementById('popup').classList.remove('show');
            });
        });
        
        // Timeline hover effects
        document.querySelectorAll('.timeline-item').forEach(item => {
            item.addEventListener('mouseenter', (e) => {
                const popupText = e.target.getAttribute('data-popup');
                if (popupText) {
                    const popup = document.getElementById('popup');
                    popup.textContent = popupText;
                    popup.style.left = e.pageX + 'px';
                    popup.style.top = (e.pageY - 50) + 'px';
                    popup.classList.add('show');
                }
            });
            
            item.addEventListener('mouseleave', () => {
                document.getElementById('popup').classList.remove('show');
            });
        });
        
        // Eye animation interaction
        document.querySelector('.eye-animation').addEventListener('click', function() {
            this.style.animation = 'none';
            setTimeout(() => {
                this.style.animation = '';
            }, 100);
        });
        
        // Vision Pro feature callouts
        document.querySelectorAll('.callout').forEach(callout => {
            callout.addEventListener('click', (e) => {
                // Remove active class from all callouts
                document.querySelectorAll('.callout').forEach(c => c.classList.remove('active'));
                document.querySelectorAll('.feature-detail').forEach(d => d.classList.remove('show'));
                
                // Add active class to clicked callout
                e.target.classList.add('active');
                
                // Show corresponding feature detail
                const feature = e.target.getAttribute('data-feature');
                const detail = document.getElementById(feature);
                if (detail) {
                    detail.classList.add('show');
                }
            });
        });
        
        // Manifesto reveal function
        let manifestoRevealed = false;
        function revealManifesto() {
            if (manifestoRevealed) return;
            
            const words = document.querySelectorAll('.manifesto-word');
            const button = document.querySelector('.reveal-btn');
            
            button.style.opacity = '0.5';
            button.style.pointerEvents = 'none';
            
            words.forEach((word, index) => {
                setTimeout(() => {
                    word.classList.add('revealed');
                    if (index === words.length - 1) {
                        manifestoRevealed = true;
                        setTimeout(() => {
                            button.textContent = 'Manifesto Revealed';
                            button.style.opacity = '0.7';
                        }, 500);
                    }
                }, index * 600);
            });
        }
    </script>
